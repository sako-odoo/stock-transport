<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="stock_transport_from_stock_picking_batch" model="ir.ui.view">
        <field name="name">stock.transport.from.stock.picking.batch</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="dock_id"/>
                <field name="vehicle_id" placeholder='Opel GJ45XC1234'/>
                <field name="vehicle_category_id" placeholder="e.g. Semi-truck"/>
                <div invisible="not vehicle_category_id">
                    <div class="d-flex" style="width:1rem">
                        <span style="margin-right: 13rem">Weight</span>
                        <div class="d-flex">
                            <field name="weight" string="Weight" class="me-2"/>
                            <field name="weight_pr" string="" widget="progressbar"/>
                        </div>
                    </div>
                    <div class="d-flex" style="width:15rem">
                        <span style="margin-right: 13rem">Volume</span>
                        <div class="d-flex">
                            <field name="volume" string="Volume" class="me-2"/>
                            <field name="volume_pr" string="" widget="progressbar"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_stock_picking_inherit_tree" model="ir.ui.view">
        <field name="name">view.stock.picking.inherit.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="volume"/>
            </xpath>
        </field>
    </record>
    
    <record id="view_inventory_batch_graph" model="ir.ui.view">
        <field name="name">inventory.batch.graph</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <graph string="Inventory Batch" sample="1">
                <field name="weight"/>
                <field name="volume"/>
            </graph>
        </field>
    </record>

    <record id="stock_transport_gantt_view" model="ir.ui.view">
        <field name="name">stock.transport.gantt.view</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <gantt class="o_mrp_workorder_gantt" date_stop="scheduled_date" date_start="create_date" color="vehicle_id" decoration-info="state == 'draft'" string="Stock gantt view" default_group_by="dock_id,vehicle_id">
                <field name="state"/>
                <field name="weight"/>
                <field name="volume"/>
            </gantt>
        </field>
    </record>

   <record id="stock_picking_batch.stock_picking_batch_action" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,graph,gantt</field>
        <field name="context">{'search_default_draft': True, 'search_default_in_progress': True,'graph_mode': 'bar', 'graph_groupbys': ['scheduled_date:day','vehicle_category_id'],}</field>
   </record>
</odoo>
